@page
@model DetailsModel
@{
    var image = "data:image/jpg;base64," + Convert.ToBase64String(Model.Input.DataUser.Image,
        0, Model.Input.DataUser.Image.Length);
    var name = Model.Input.DataUser.name + " " + Model.Input.DataUser.lastNames;
}
<div class="container">
    <h2>
        <a class="btn btn-primary text-white" asp-area="Users" asp-controller="Users" asp-action="Users">Atrás</a>
        @name
    </h2>
    <div class="row">

        <div class="col-sm ">
            <div class="card text-center" style="width: 21rem;">
                <div class="card-header ">
                    <img class='imageUserDetails' src="@image" />
                </div>
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <td>
                                    <p> @Model.Input.DataUser.name</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.role </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @if (Model.Input.DataUser.IdentityUser.LockoutEnabled)
                                    {
                                        <p class="text-success">Disponible.</p>
                                    }
                                    else
                                    {
                                        <p class="text-danger">No disponible.</p>
                                    }

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <th>
                                    <h2>Información</h2>
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    Identificación
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.identification</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Nombre
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@name</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Telefono
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.IdentityUser.PhoneNumber</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Correo electronico
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.email</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <form asp-area="Users" asp-page="/Account/Registrar" method="post">
                                        @{
                                            <!--var dataUser = JsonConvert.SerializeObject(Model.Input.DataUser);-->
                                        }

                                        <input type="submit" value="Editar" class="btn btn-success ">
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
