@page "/Usuarios/Registrar"
@model RegistrarModel
@{
    var image = "/images/images/default.png";
}
<div class="container">
    <form method="post" enctype="multipart/form-data">

        <div class="row">

            <div class="col-sm-6 col-md-4">
                <div class="card text-center">

                    <div class="card-header">
                        <output id="imageUser">
                            <img src=@image class="imageUser" />
                        </output><!-- <output id="imageUser"> -->
                    </div><!-- <div class="card-header"> -->

                    <div class="card-body">
                        <div class="caption text-center">
                            <label class="btn btn-primary" for="files">Seleccionar imagen</label>
                            <input asp-for="Input.AvatarImage" accept="image/*" type="file" id="files">
                        </div> <!-- <div class="caption text-center"> -->
                    </div><!-- <div class="card-body"> -->

                </div> <!-- <div class="card text-center"> -->
            </div> <!--<div class="col-sm-6 col-md-3">-->

            <div class="col-xl col-md-7">
                <div class="panel  panel-primary">

                    <div class="panel-heading">
                        <h3 class="panel-title">Registrar usuarios</h3>
                    </div><!--<div class="panel-heading">-->

                    <div class="panel-body">
                        <div class="card">

                            <!--div class="accordion" id="accordionExample">

                            <div class="card-header" id="headingOne">
                                <div id="header" class="bg-info">
                                    <h2 class="mb-0 t">
                                        <button class="btn btn-link text-light " type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            Ingresar información
                                        </button><!--<button>
                                    </h2><!--<h2 class="mb-0 t">
                                </div><!--<div class="bg-info" id="header">
                            </div><!--<div  class="card-header" id="headingOne">

                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">-->
                            <div class="card-body">

                                <div class="form-group">
                                    <input asp-for="Input.identification" placeholder="Identificación" class="form-control" autofocus required>
                                    <span asp-validation-for="Input.identification" class="text-danger"></span>
                                </div><!--<div  class="form-group">-->

                                <div class="form-group">
                                    <input asp-for="Input.name" placeholder="Nombre" class="form-control">
                                    <span asp-validation-for="Input.name" class="text-danger"></span>
                                </div><!--<div  class="form-group">-->

                                <div class="form-group">
                                    <input asp-for="Input.lastNames" placeholder="Apellidos" class="form-control">
                                    <span asp-validation-for="Input.lastNames" class="text-danger"></span>
                                </div><!--<div  class="form-group">-->

                                <div class="form-group">
                                    <input asp-for="Input.phoneNumber" placeholder="Teléfono" class="form-control">
                                    <span asp-validation-for="Input.phoneNumber" class="text-danger"></span>
                                </div><!--<div  class="form-group">-->

                                <div class="form-group">
                                    <input asp-for="Input.email" placeholder="Correo electrónico" class="form-control">
                                    <span asp-validation-for="Input.email" class="text-danger"></span>
                                </div><!--<div  class="form-group">-->

                                <div class="form-group">
                                    <input asp-for="Input.password" placeholder="Contraseña" class="form-control">
                                    <span asp-validation-for="Input.password" class="text-danger"></span>
                                </div><!--<div  class="form-group">-->

                                <div class="form-group">
                                    @Html.DropDownList("Input.role", new SelectList(Model.Input.rolesLista, "Text", "Text"), "Seleccione un tipo", new { @class = "form-control" }) @*value = id seleccion, text= texto seleccion *@
                                    <span asp-validation-for="Input.role" class="text-danger"></span>

                                </div><!--<div  class="form-group">-->

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                                </div><!--<div  class="form-group">-->

                                <div class="form-group">
                                    <label class="text-danger">@Html.DisplayFor(m => m.Input.ErrorMessage)</label>
                                </div><!--<div  class="form-group">-->

                            </div><!--<div  class="card-body">-->
                            <!--</div><div class="collapse show">-->

                        </div><!--<div class="card">-->
                        <!-- </div> <div class="accordion" id="accordionExample">-->
                    </div><!--<div class="panel-body">-->

                </div><!--<div class="panel panel-primary">-->
            </div> <!--<div class="col-xs-6 col-md-5">-->

        </div> <!--<div class="row">-->
    </form> <!-- <form method="post" enctype="multipart/form-data">-->
</div> <!-- -->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}